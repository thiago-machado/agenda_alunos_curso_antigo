<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BCBCBC"
    android:orientation="horizontal">

    <!-- O ANDROID AUTOMATICAMENTE RECONHECERÁ O FORMADO LANDSCAPE E O CARREGARÁ -->
    <ImageView
        android:id="@+id/item_foto"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:src="@drawable/person" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Nome"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/item_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="Telefone"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_endereco"
            android:text="Endereco"
            android:textSize="24sp"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_site"
            android:text="Site"
            android:textSize="24sp"
            android:paddingTop="10dp"/>
    </LinearLayout>

</LinearLayout>